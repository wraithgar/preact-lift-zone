/*--------------------------------------------------------------------
*
* $TABLES
*
--------------------------------------------------------------------*/

.table-responsive
  overflow-x: auto

table
  width: 100%
  max-width: 100%
  margin-bottom: $space

td, th
  text-align: left
  padding: $ui-padding-default
  border-bottom: $ui-border

thead

  th
    font-weight: $font-weight-bold
    color: $charcoal

//- Variations

tr

  &.table-cell-error
    background-color: $alert-color-lighter
    color: $alert-color

    a
      color: darken($alert-color, 20%)

      &:hover
        color: darken($alert-color, 40%)

  &.table-cell-success
    background-color: $success-color-lighter
    color: $success-color

    a
      color: darken($success-color, 20%)

      &:hover
        color: darken($success-color, 40%)

  &.table-cell-alert
    background-color: $warning-color-lighter
    color: $warning-color

    a
      color: darken($warning-color, 20%)

      &:hover
        color: darken($warning-color, 40%)

//- Table Striped

.table-striped

  tr:nth-child(even)
    color: $jumbo

//- Table Outlined

.table-outlined
  border: $ui-border
  border-radius: 3px

  tr:last-of-type td
    border: none

//- Table Hovers

.table-with-hover tr:hover,
.table-striped tr:nth-child(even)
  background-color: lighten($secondary-color-lighter, 80%)

@media screen and (max-width: $breakpoint-tablet - 1)

  table

    td, th
      padding: $ui-padding-narrow $ui-padding-default
