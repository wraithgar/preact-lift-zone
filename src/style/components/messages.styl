/*--------------------------------------------------------------------
*
* $MESSAGES
*
--------------------------------------------------------------------*/

.message
  padding: $ui-padding-spaced
  position: relative
  background-color: $primary-color-lighter
  color: $primary-color

  a
    font-weight: bold

  p:last-of-type
    margin: 0

  &:after
    border: solid transparent
    content: ''
    height: 0
    width: 0
    position: absolute
    pointer-events: none
    border-color: rgba(255, 255, 255, 0)
    border-width: 5px

.message-dismissable
  padding-right: $ui-padding-spaced*2

.message-full-width
  text-align: center

.message-above, .message-below

  &:after
    left: 50%
    margin-left: -6px

//- Message positioned below the parent
.message-below

  &:after
    border-bottom-color: $primary-color-lighter
    bottom: 100%

  &.message-error
    &:after
      border-bottom-color: $alert-color-lighter

  &.message-success
    &:after
      border-bottom-color: $success-color-lighter

  &.message-alert
    &:after
      border-bottom-color: $warning-color-lighter

//- Message positioned above the parent
.message-above

  &:after
    border-top-color: $primary-color-lighter
    top: 100%

  &.message-error
    &:after
      border-top-color: $alert-color-lighter

  &.message-success
    &:after
      border-top-color: $success-color-lighter

  &.message-alert
    &:after
      border-top-color: $warning-color-lighter

//- Validation messages
.message-error
  background-color: $alert-color-lighter
  color: $alert-color

  a
    color: darken($alert-color, 20%)

    &:hover
      color: darken($alert-color, 40%)

.message-alert
  background-color: $warning-color-lighter
  color: $warning-color

  a
    color: darken($warning-color, 20%)

    &:hover
      color: darken($warning-color, 40%)

.message-success
  background-color: $success-color-lighter
  color: $success-color

  a
    color: darken($success-color, 20%)

    &:hover
      color: darken($success-color, 40%)

//- Message iconography
.close
  display: block
  position: absolute
  top: 50%
  right: 15px
  margin-top: -15px
  cursor: pointer
  font-size: large
  font-weight: bold

//- Messages in forms

form .message
  padding: $ui-padding-default
