/*--------------------------------------------------------------------
*
* $DROPDOWNS
*
--------------------------------------------------------------------*/

.dropdown-standalone
  position: relative
  display: inline-block
  cursor: pointer
  padding: $ui-padding-default
  border-radius: 3px

  &:hover
    border-radius: 3px 3px 0 0

    .dropdown
      display: block
      position: absolute
      top: 100%
      left: 0
      width: 100%
      border-radius: 0 0 3px 3px

      a
        padding: $ui-padding-default
        display: block

  .dropdown
    display: none

  .icon-arrow-down
    position: relative
    top: -2px
    margin-left: 5px

.dropdown-outlined,
.dropdown-outlined .dropdown
  border: $ui-border

.dropdown-standalone.dropdown-outlined
  .dropdown
    width: 101%
    left: -1px

.dropdown-outlined

  .dropdown
    background-color: white

    li:not(:last-child)
      border-bottom: $ui-border

.dropdown-coloured,
.dropdown-coloured .dropdown
  background-color: $primary-color

.dropdown-coloured

  .button-unstyled,
  .dropdown a
    color: white

  .icon-arrow-down
    border-top-color: white

  .dropdown

    li:not(:last-child)
      border-bottom: 1px solid darken($primary-color, 10%)

    a:hover
      color: $primary-color-lighter

.dropdown-neutral,
.dropdown-neutral .dropdown
  background-color: $secondary-color-lighter

.dropdown-neutral

  a
    color: $charcoal

  a:hover,
  .button-unstyled:hover
    color: darken($secondary-color, 90%)

  .icon-arrow-down
    border-top-color: darken($secondary-color, 50%)

  .dropdown

    li:not(:last-child)
      border-bottom: 1px solid $secondary-color-light
